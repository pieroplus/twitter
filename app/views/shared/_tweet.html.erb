<div class="content clearfix">
  <img src="https://www.nihonpet-plus.co.jp/dog/img/top_dog009.jpg" class="img-circle content__thumbnail">
  <div class="content__info">
    <div class="content__info__wapper">
      <%= link_to user_path(tweet.user.id) do %>
        <p class="content__info__wapper__name"><%= tweet.user.name %> @<%= tweet.user.screen_name %></p>
      <% end %>
      <p class="content__info__wapper__date"> <%= tweet.created_at %></p>
    </div>
    <div class="content__info__center">
      <%= simple_format(tweet.text) %>
    </div>
    <div class="  content__info__bottom">
      <div class="glyphicon glyphicon-comment col-sm-3 col-md-3"></div>
      <div class="glyphicon glyphicon-retweet col-sm-3 col-md-3"></div>
      <div class="glyphicon glyphicon-heart col-sm-3 col-md-3"></div>
      <div class="glyphicon glyphicon-envelope col-sm-3 col-md-3"></div>
    </div>
  </div>
</div>
<hr>
